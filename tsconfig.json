{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "noLib": true,
    "typeRoots": []
