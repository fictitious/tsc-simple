  "files": [
    "node_modules/typescript/lib/lib.es5.d.ts",
    "node_modules/typescript/lib/lib.es2015.core.d.ts",
    "node_modules/typescript/lib/lib.es2015.collection.d.ts",
    "node_modules/typescript/lib/lib.es2015.iterable.d.ts",

    "src/tsc-simple.ts"
  ]
}